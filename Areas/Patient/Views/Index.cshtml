@using HMS_MVC_Two.Models
@model List<HMS_MVC_Two.Models.Doctor>

@{
    int count = 0;
    List<string> doctorsImg = new List<string>{
"https://www.shutterstock.com/image-vector/female-doctor-icon-stethoscope-women-260nw-2499389821.jpg",
"https://www.shutterstock.com/image-vector/female-doctor-icon-stethoscope-women-260nw-2499389821.jpg",
"https://www.shutterstock.com/image-vector/female-doctor-icon-stethoscope-women-260nw-2499389821.jpg",
"https://www.shutterstock.com/image-vector/female-doctor-icon-stethoscope-women-260nw-2499389821.jpg",
"https://www.shutterstock.com/image-vector/female-doctor-icon-stethoscope-women-260nw-2499389821.jpg",
};
    Layout = "~/Areas/Patient/Views/Shared/_Layout.cshtml";
}

<div class="doctors-cards">
    @foreach (var doctor in Model)
    {
        <div class="doctor-card">
            <img src="@(doctorsImg.ElementAtOrDefault(count))" alt="Doctor Image" />
            <h5>@doctor.Name</h5>
            <p>@doctor.Specialty</p>
            <a asp-controller="Patient" asp-action="BookAppointment" asp-route-id="@doctor.DoctorId" class="btn-book">
                Book Appointment
            </a>
        </div>
        count++;
    }
</div>